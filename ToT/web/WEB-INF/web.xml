<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GetTopServlet</servlet-name>
        <servlet-class>Controller.GetTopServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFavoritesServlet</servlet-name>
        <servlet-class>Controller.GetFavoritesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RandomizeServlet</servlet-name>
        <servlet-class>Controller.RandomizeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFavorite</servlet-name>
        <servlet-class>Controller.RemoveFavorite</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetTopServlet</servlet-name>
        <url-pattern>/GetTopServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFavoritesServlet</servlet-name>
        <url-pattern>/GetFavoritesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RandomizeServlet</servlet-name>
        <url-pattern>/RandomizeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveFavorite</servlet-name>
        <url-pattern>/RemoveFavorite</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
